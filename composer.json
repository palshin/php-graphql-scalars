{
    "name": "epalshin/graphql-scalars",
    "description": "Collection of GraphQL scalars for webonyx/graphql-php",
    "keywords": [
        "palshin",
        "php",
        "graphql",
        "scalars"
    ],
    "homepage": "https://github.com/palshin/php-graphql-scalars",
    "license": "MIT",
    "authors": [
        {
            "name": "Eugene Palshin",
            "email": "eo.palshin@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "webonyx/graphql-php": "^14.8"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "nuwave/lighthouse": "^5.12",
        "phpunit/phpunit": "^9.5",
        "spatie/ray": "^1.10",
        "vimeo/psalm": "^4.3"
    },
    "suggest": {
        "nuwave/lighthouse": "GraphQL integration for Laravel projects"
    },
    "autoload": {
        "psr-4": {
            "Palshin\\GraphQLScalars\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Palshin\\GraphQLScalars\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
